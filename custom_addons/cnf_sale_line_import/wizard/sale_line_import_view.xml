<?xml version='1.0' encoding='UTF-8'?>
<openerp>
    <data>
    
        <record id="view_sale_line_import" model="ir.ui.view">
            <field name="name">Import Lines</field>
            <field name="model">wizard.import</field>
            <field name="arch" type="xml">
               <form string="Import Order Lines" >
                    <header>
                        <field name="state" widget="statusbar"  readonly="1"/>
                    </header>
                    <group string="Choose Excel">
                        <field name="name" filename='filename' required="1"/>
                        <field name="filename" invisible="1"/>
                    </group>
                    <footer>
                        <button name="create_sale_order_line" string="Import" type="object" class="oe_highlight"/>
                        OR
                          <button string="Cancel" class="oe_link" special="cancel" type="object" />
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_sale_line_import" model="ir.actions.act_window">
            <field name="name">Import Lines</field>
            <field name="res_model">wizard.import</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="view_sale_line_import"/>
            <field name="target">new</field>
        </record>

        <act_window name="Import Lines" res_model="wizard.import" src_model="sale.order" view_mode="form" target="new" key2="client_action_multi" id="action_sale_line_import"/>


        <data noupdate="1">
            <record model="ir.config_parameter" id="so_import_file_path">
                <field name="key">import_so_line_file_path</field>
                <field name="value">patch_to_save_file_upload</field>
                <field name="group_ids" eval="[(4, ref('base.group_system'))]" />
            </record>
        </data>

    </data>
</openerp>