<?xml version="1.0"?>
<openerp>
    <data>
        <record model="ir.ui.view" id="view_server_statistics_graph">
            <field name="name">ir.actions.server.form.inherit</field>
            <field name="model">ir.actions.server</field>
            <field name="inherit_id" ref="base.view_server_action_form"/>
            <field name="arch" type="xml">
                <page name="code" position="after">
                	<page string="SMS" autofocus="autofocus" attrs="{'invisible': [('state', '!=', 'sms')]}">
                		<group>
                			<group>
                				<field name="sms_server" attrs="{'required':[('state','=','sms')]}" />
                				<field name="sms_template_id" domain="[('sms_template','=',True)]" attrs="{'required':[('state','=','sms')]}"
                					context="{'default_sms_template':1,'form_view_ref': 'to_smsclient.sms_template_form'}"/>
                			</group>
                		</group>
                	</page>
                </page>
            </field>
        </record>
    </data>
</openerp>
