<?xml version="1.0"?>
<openerp>
    <data>
        
        <!-- SMS Template -->

        <record model="ir.ui.view" id="sms_template_tree">
            <field name="name">email.template.tree</field>
            <field name="model">mail.template</field>
            <field name="arch" type="xml">
                <tree string="SMS Templates">
                    <field name="name"/>                                        
                    <field name="model_id"/>
                    <field name="subject"/>
                    <field name="gateway_id"/>
                    <field name="mobile_to"/>
                </tree>
            </field>
        </record>
        
        <record model="ir.ui.view" id="sms_template_form">
            <field name="name">sms.template.form</field>
            <field name="model">mail.template</field>
            <field name="arch" type="xml">
            	<form string="Templates">
	            	<sheet>
	            		<group>
	            			<group>
	            				<field name="name"/>
	           				    <field name="model_id" required="1" options="{'no_create': True}"/>      
	           				    <field name="model" invisible="1"/>  				
	            			</group>
	            			<group>
	            				<field name="gateway_id"/>	            				
	            			</group>
	            		</group>
	            		<notebook>
	            			<page string="Message">
	            				<group>
	            					<field name="mobile_to"/>
	            					<field name="partner_to"/>
	            					<field name="lang"/>
	            					<field name="sms_content" placeholder="Size of SMS should not be more then 160 char"/>
	            				</group>	            				
	            			</page>
	            		</notebook>
	            	</sheet>             		
            	</form>            	           	
            </field>
        </record>
        
        <record model="ir.actions.act_window" id="action_sms_template_tree_all">
            <field name="name">SMS Templates</field>
            <field name="res_model">mail.template</field>
            <field name="view_type">form</field>
            <field name="view_mode">form,tree</field>
            <field name="view_id" ref="sms_template_tree"/>
            <field name="search_view_id" ref="mail.view_email_template_search"/>
            <field name="context">{'default_sms_template': 1}</field>
            <field name="domain">[('sms_template','=',True)]</field>
        </record>
        
        <record id="action_sms_template_tree" model="ir.actions.act_window.view">
            <field eval="1" name="sequence"/>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="sms_template_tree"/>
            <field name="act_window_id" ref="action_sms_template_tree_all"/>
        </record>
        <record id="action_sms_template_form" model="ir.actions.act_window.view">
            <field eval="2" name="sequence"/>
            <field name="view_mode">form</field>
            <field name="view_id" ref="sms_template_form"/>
            <field name="act_window_id" ref="action_sms_template_tree_all"/>
        </record>
        
        <record id="action_email_template_tree" model="ir.actions.act_window.view">
            <field eval="1" name="sequence"/>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="mail.email_template_tree"/>
            <field name="act_window_id" ref="mail.action_email_template_tree_all"/>
        </record>
        
        <record id="action_email_template_form" model="ir.actions.act_window.view">
            <field eval="2" name="sequence"/>
            <field name="view_mode">form</field>
            <field name="view_id" ref="mail.email_template_form"/>
            <field name="act_window_id" ref="mail.action_email_template_tree_all"/>
        </record>

        <menuitem id="menu_sms_templates" parent="menu_smsclient_administration_server" action="action_sms_template_tree_all"
                  sequence="4"/>
        
    </data>
</openerp>
